{{!< default}}

<div class="container">
    <div class="row">
        <div class="col-lg-8 col-xl-9">
            <main class="site-main">
                {{#post}}
                    <article class="{{post_class}}{{#unless feature_image}} no-image{{/unless}} single-post">
                        {{> post-header single=true number_date=true big_title=true}}
                        {{> post-media ratio="horizontal"}}
                        <div class="post-content kg-canvas u-text-format">
                            {{content}}
                        </div>
                        <div class="container medium">
                            {{> share}}
                            {{> author}}
                        </div>
                    </article>
                    {{> post-navigation}}
                {{/post}}
                {{> related}}
                {{> comment}}
            </main>
        </div>
        <div class="sidebar-column col-lg-4 col-xl-3 hidden-xs hidden-sm hidden-md">
            {{> widgets/widgets}}
        </div>
    </div>
</div>
