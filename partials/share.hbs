<div class="share u-hover-wrapper">
    <a class="share-item share-facebook u-hover-item"
       href="https://www.facebook.com/sharer.php?u={{url absolute="true"}}" rel="noopener noreferrer" target="_blank"><i
        class="icon icon-facebook"></i></a>

    <a class="share-item share-twitter u-hover-item"
       href="https://twitter.com/intent/tweet?url={{url absolute="true"}}&text={{encode title}}"
    rel="noopener noreferrer" target="_blank"><i class="icon icon-twitter"></i></a>

    <a class="share-item share-linkedin u-hover-item"
       href="https://www.linkedin.com/shareArticle?mini=true&url={{url absolute="true"}}&title={{encode title}}"
    rel="noopener noreferrer" target="_blank"><i class="icon icon-linkedin"></i></a>

    <a class="share-item share-telegram u-hover-item"
       href="https://t.me/share/url?url={{url absolute="true"}}&text={{encode title}}"
    rel="noopener noreferrer" target="_blank"><i
        class="icon icon-telegram"></i></a>
</div>