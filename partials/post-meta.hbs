<div class="post-author-meta">

    {{#unless hide_meta}}
        <div class="post-author">
            {{#foreach authors}}
                {{#if profile_image}}
                    <a class="post-author-image-link" href="{{url}}">
                        <img class="post-author-image" height="30" width="30" src="{{img_url profile_image size="xs"}}" alt="{{name}}">
                    </a>
                {{/if}}
            {{/foreach}}
            <div class="post-author-name hidden-xs hidden-sm">
                {{#foreach authors}}<a class="post-author-name-link" href="{{url}}">{{name}}</a>{{/foreach}}
            </div>
        </div>
        <div class="post-meta">
                <span class="post-meta-item post-meta-date">
                    <time datetime="{{date format="YYYY-MM-DD"}}">
                        {{#unless number_date}}
                            {{date published_at timeago="true"}}
                        {{else}}
                            {{date published_at}}
                        {{/unless}}
                    </time>
                </span>
            <span class="post-meta-item post-meta-length">
                {{reading_time}}
            </span>
            {{#if tags}}
                <span class="post-meta-item post-meta-tags">
                    {{#foreach tags}}<a class="post-tag post-tag-{{slug}}" href="{{url}}"
                                        title="{{name}}">{{name}}</a>{{/foreach}}
                </span>
            {{/if}}
        </div>
    {{/unless}}
</div>